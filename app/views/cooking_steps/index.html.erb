<p id="notice"><%= notice %></p>

<h1>Cooking Steps</h1>

<table>
  <thead>
    <tr>
      <th>Receipe</th>
      <th>Number</th>
      <th>Description</th>
      <th>Image path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cooking_steps.each do |cooking_step| %>
      <tr>
        <td><%= cooking_step.receipe_id %></td>
        <td><%= cooking_step.number %></td>
        <td><%= cooking_step.description %></td>
        <td><%= cooking_step.image_path %></td>
        <td><%= link_to 'Show', cooking_step %></td>
        <td><%= link_to 'Edit', edit_cooking_step_path(cooking_step) %></td>
        <td><%= link_to 'Destroy', cooking_step, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cooking Step', new_cooking_step_path %>
