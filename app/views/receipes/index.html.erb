<p id="notice"><%= notice %></p>

<h1>Receipes</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Receipe category</th>
      <th>Title</th>
      <th>Introduction</th>
      <th>Image path</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @receipes.each do |receipe| %>
      <tr>
        <td><%= receipe.user_id %></td>
        <td><%= receipe.receipe_category_id %></td>
        <td><%= receipe.title %></td>
        <td><%= receipe.introduction %></td>
        <td><%= receipe.image_path %></td>
        <td><%= link_to 'Show', receipe %></td>
        <td><%= link_to 'Edit', edit_receipe_path(receipe) %></td>
        <td><%= link_to 'Destroy', receipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

