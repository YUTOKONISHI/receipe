<h1>マイページ</h1>
 
<h2>プロフィール</h2> 

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>氏名:</strong>
  <%= @user.first_name %>  <%= @user.last_name %>
</p>

<%= image_tag(@user.image_path_url) rescue nil %>

<p>
  <strong>アレルギー品目</strong>
	 <%= collection_check_boxes(:user, :allergen_ids, Allergen.all, :id, :name) do |al_usr| %>
     <%= al_usr.label { al_usr.check_box(disabled: :disabled) + al_usr.text } %>
    <% end %>
</p>

<%= link_to '登録情報変更', edit_user_path(@user) %>


<%= form_tag({controller: :login, action: :logout}, { method: :post }) do %>
    <%= submit_tag 'ログアウト' %>
<% end %>
